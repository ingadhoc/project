<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="project_issue_form_view">
            <field name="name">Project Issue Tracker Form</field>
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue_solutions.project_issue_form_view"/>
            <field name="arch" type="xml">       
                <field name="project_issue_solution_id" position="attributes">
                    <attribute name="context">{'default_name':name, 'default_solution_description':solution_description,'default_issue_description':issue_description,'default_product_ids':[(6, 0, [product_id])]}</attribute>
                </field>
            </field>
        </record>

    </data>
</odoo>
